# ============================================
# Moodle AI Assistant - Backend Configuration
# ============================================

# ----------------
# LLM Configuration
# ----------------
# Choose your LLM provider: openai or anthropic
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ----------------
# Qdrant Vector Database
# ----------------
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=moodle_knowledge
QDRANT_VECTOR_SIZE=1536

# ----------------
# RAG Configuration
# ----------------
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
MAX_HISTORY_LENGTH=10

# ----------------
# Web Search Configuration
# ----------------
# Serper API (Google Search): https://serper.dev/
SERPER_API_KEY=your-serper-api-key-here

# DuckDuckGo is used as fallback (no API key required)

# ----------------
# Backend Server Configuration
# ----------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=false

# ----------------
# Moodle Integration
# ----------------
MOODLE_BASE_URL=http://localhost
MOODLE_API_TOKEN=

# ----------------
# Document Processing
# ----------------
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ----------------
# Security
# ----------------
# Add allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# ----------------
# Monitoring
# ----------------
# Enable Prometheus metrics
ENABLE_METRICS=true
